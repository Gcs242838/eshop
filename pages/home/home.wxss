.pyg_home {
  width: 100%;
  height: 1000px;
  display: flex;
  flex-direction: column;
}
.pyg_home .discover_text {
  width: 100%;
  padding: 20rpx;
  padding-left: 40rpx;
}
.pyg_home .discover_text text {
  border-bottom: 4rpx solid #60b173;
  font-size: 40rpx;
  color: #333333;
}
.pyg_home .scoll_view_tag {
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 20rpx;
}
.pyg_home .scoll_view_tag view {
  width: 180rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #60b173;
  border-radius: 50rpx;
}
.pyg_home .scoll_view_wangpu {
  width: 1800rpx;
  height: 590rpx;
  display: flex;
  flex-direction: row;
  padding: 20rpx;
}
.pyg_home .scoll_view_wangpu .wangpu {
  width: 620rpx;
  height: 540rpx;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius: 30rpx;
}
.pyg_home .scoll_view_wangpu .wangpu image {
  width: 620rpx;
  height: calc(310 * 269 / 400);
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
}
.pyg_home .scoll_view_wangpu .wangpu .wangpu_info {
  width: 620rpx;
  background-color: #fff;
}
